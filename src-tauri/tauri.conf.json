{
  "build": {
    "devPath": "http://localhost:5173",
    "distDir": "../src",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "Charisma",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "path": {
        "all": true
      },
      "shell": {
        "all": false,
        "open": true
      },
      "dialog": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "close": true,
        "hide": true,
        "show": true,
        "maximize": true,
        "minimize": true,
        "unmaximize": true,
        "unminimize": true,
        "startDragging": true,
        "setFullscreen": true
      }
    },
    "windows": [
      {
        "decorations": false,
        "title": "Charisma",
        "width": 800,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.feralsoft.charisma",
      "icon": ["icons/128x128.png"]
    }
  }
}
