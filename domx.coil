let flex_preview = {
  query: "[data-kind=property]:has(> [data-attr=name] [data-value=display], > [data-attr=expr] [data-value=flex])"
  def :insert_after({self, current_rule: {properties}}) = :div{
    class: "flex-direction-preview"
    "data-flex-direction" => properties.at("flex-direction")
    def :onclick
      if properties.at(:flex_direction) == "column"
        properties.delete!("flex-direction")
      else
        properties.set!("flex-direction" "column")
      end
    end
  }
}
